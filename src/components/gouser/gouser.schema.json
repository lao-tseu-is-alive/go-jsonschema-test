{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/gouser.schema.json",
  "title": "User",
  "description": "A user of the application",
  "type": "object",
  "properties": {
    "id": {
      "description": "unique identifier",
      "type": "integer",
      "exclusiveMinimum": 0
    },
    "name": {
      "description": "real name",
      "type": "string",
      "default": "John Doe",
      "minLength": 2,
      "maxLength": 100,
      "pattern": "^[^0-9]+$"
    },
    "email": {
      "title": "Email",
      "description": "Email",
      "type": "string",
      "$comment": "https://json-schema.org/understanding-json-schema/reference/regular_expressions.html",
      "pattern": "^[a-z0-9-.]+@([a-z0-9-]+[.])+[a-z0-9-]{2,4}$"
    },
    "username": {
      "description": "login name",
      "type": "string",
      "minLength": 3,
      "maxLength": 100,
      "pattern": "^[^0-9 ]+$"
    },
    "is_admin": {
      "description": "Tell if this user is having Administrator privileges",
      "type": "boolean",
      "default": false
    }
  },
  "required": ["id","name","email","username"]
}
